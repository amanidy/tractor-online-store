generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  phone           String?  @unique
  password        String
  
  isVerified      Boolean  @default(false)
  role            String   
  createdAt       DateTime @default(now())
  userrole        UserRole 

  tractors        Tractor[]
  listings        Listing[]
  purchases       Transaction[] @relation("BuyerTransactions")
  sales           Transaction[] @relation("SellerTransactions")
  qualityReports   QualityReport[] @relation("ReportedByReports") // Relation to QualityReport

  dealer        Dealer?
}

enum UserRole {
  ADMIN
  SELLER
  BUYER
  DEALER
}

model Tractor {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  price           Float
  location        String
  specifications  String
  history         String
  images          String[] 
  sellerId        Int
  seller          User     @relation(fields: [sellerId], references: [id])
  createdAt       DateTime @default(now())
  inquiries       Inquiry[]  
  sales           Sale[]

  isApproved    Boolean  @default(false) 
  }

model Inquiry {
  id        Int      @id @default(autoincrement())
  tractorId       Int
  name            String
  email           String
  message         String
  createdAt       DateTime @default(now())

  tractor         Tractor  @relation(fields: [tractorId], references: [id])  // Relation to Tractor
}

model Sale {
  id              Int      @id @default(autoincrement())
  tractorId       Int
  buyerName       String
  price           Float
  createdAt       DateTime @default(now())
  
  tractor         Tractor  @relation(fields: [tractorId], references: [id])  // Relation to Tractor
}



// Listing model for tractors and agricultural implements
model Listing {
  id              String          @id @default(cuid())
  title           String
  description     String
  category        String
  make            String
  model           String
  year            Int
  condition       ListingCondition
  price           Float
  location        String
  images          String[]
  status          ListingStatus    @default(PENDING)
  seller          User            @relation(fields: [sellerId], references: [id])
  sellerId        Int
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  transactions    Transaction[]
  qualityReports  QualityReport[]
}

// Enum for listing status
enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
}

// Enum for listing condition
enum ListingCondition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  POOR
}

// Transaction model to track sales
model Transaction {
  id              String            @id @default(cuid())
  listing         Listing          @relation(fields: [listingId], references: [id])
  listingId       String
  buyer           User            @relation("BuyerTransactions", fields: [buyerId], references: [id])
  buyerId         Int
  seller          User            @relation("SellerTransactions", fields: [sellerId], references: [id])
  sellerId        Int
  price           Float
  status          TransactionStatus @default(PENDING)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

// Enum for transaction status
enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  CANCELLED
}

// Quality Report model for tracking and managing quality concerns
model QualityReport {
  id              String           @id @default(cuid())
  listing         Listing         @relation(fields: [listingId], references: [id])
  listingId       String
  reportedBy      User           @relation("ReportedByReports", fields: [reportedById], references: [id])
  reportedById    Int
  description     String
  severity        QualitySeverity
  status          QualityReportStatus @default(OPEN)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

// Enum for quality report severity
enum QualitySeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Enum for quality report status
enum QualityReportStatus {
  OPEN
  INVESTIGATED
  RESOLVED
  CLOSED
}


model AdminActivityLog {
  id          Int      @id @default(autoincrement())
  type        String   // e.g., 'TRACTOR_LISTING_CREATED', 'USER_REGISTERED', etc.
  description String
  details     String?  // JSON string to store additional context
  timestamp   DateTime @default(now())

  @@index([type])
  @@index([timestamp])
}


enum DealerType{
  TractorParts
  EquipmentSupplier
  Comprehensive
}

model Dealer {
  id            Int       @id @default(autoincrement())
  name          String
  location      String
  contactEmail  String
  contactPhone  String
  dealerType    DealerType
  specialties   String[]
  rating        Float     @default(0.0)
  verified      Boolean   @default(false)
  userId        Int       @unique
  user          User      @relation(fields: [userId], references: [id])
  products      Product[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  category    String
  price       Decimal
  inStock     Boolean   @default(true)
  dealerId    Int
  dealer      Dealer    @relation(fields: [dealerId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}