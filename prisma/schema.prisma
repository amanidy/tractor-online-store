generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name            String
  email           String   @unique
  phone           String?  @unique
  password        String
  
  isVerified      Boolean  @default(false)
  role            String   
  createdAt       DateTime @default(now())
  userrole        UserRole 

  tractors        Tractor[]
  listings        Listing[]
  purchases       Transaction[] @relation("BuyerTransactions")
  sales           Transaction[] @relation("SellerTransactions")
  qualityReports   QualityReport[] @relation("ReportedByReports") // Relation to QualityReport

  dealer        Dealer?
}

enum UserRole {
  ADMIN
  SELLER
  BUYER
  DEALER
}

model Tractor {
 id        String   @id @default(uuid())
  title           String  @db.Text
  description     String? @db.Text
  price           Float?
  location        String?
  specifications  String?
  history         String?
  images          String[]
  imageUrl        String? @db.Text
  sellerId        String
  seller          User     @relation(fields: [sellerId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime  @updatedAt
  inquiries       Inquiry[]  
  sales           Sale[]

  attachments Attachment[]

  isApproved    Boolean  @default(false) 

  categoryId  String?

  category Category? @relation(fields: [categoryId],references: [id])


  @@index([categoryId])
    details Detail[]
  purchases Purchase[]
}

  model Category{
    id        String   @id @default(uuid())
    name      String @unique
    tractors Tractor[]

  }

  model Attachment{

    id        String   @id @default(uuid())
    name      String
    url       String @db.Text
    tractorId String
    tractor Tractor @relation(fields: [tractorId],references: [id],onDelete: Cascade)
    createdAt       DateTime @default(now())
    updatedAt       DateTime  @updatedAt

    @@index([tractorId])


  }

model Inquiry {
  id        String   @id @default(uuid())
  tractorId       String
  name            String
  email           String
  message         String
  createdAt       DateTime @default(now())

  tractor         Tractor  @relation(fields: [tractorId], references: [id])  // Relation to Tractor
}

model Sale {
  id        String   @id @default(uuid())
  tractorId       String
  buyerName       String
  price           Float
  createdAt       DateTime @default(now())
  
  tractor         Tractor  @relation(fields: [tractorId], references: [id])  // Relation to Tractor
}



// Listing model for tractors and agricultural implements
model Listing {
  id              String          @id @default(cuid())
  title           String
  description     String
  category        String
  make            String
  model           String
  year            Int
  condition       ListingCondition
  price           Float
  location        String
  images          String[]
  status          ListingStatus    @default(PENDING)
  seller          User            @relation(fields: [sellerId], references: [id])
  sellerId        String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  transactions    Transaction[]
  qualityReports  QualityReport[]
}

// Enum for listing status
enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
}

// Enum for listing condition
enum ListingCondition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  POOR
}

// Transaction model to track sales
model Transaction {
  id              String            @id @default(cuid())
  listing         Listing          @relation(fields: [listingId], references: [id])
  listingId       String
  buyer           User            @relation("BuyerTransactions", fields: [buyerId], references: [id])
  buyerId         String
  seller          User            @relation("SellerTransactions", fields: [sellerId], references: [id])
  sellerId        String
  price           Float
  status          TransactionStatus @default(PENDING)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

// Enum for transaction status
enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  CANCELLED
}

// Quality Report model for tracking and managing quality concerns
model QualityReport {
  id              String           @id @default(cuid())
  listing         Listing         @relation(fields: [listingId], references: [id])
  listingId       String
  reportedBy      User           @relation("ReportedByReports", fields: [reportedById], references: [id])
  reportedById    String
  description     String
  severity        QualitySeverity
  status          QualityReportStatus @default(OPEN)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

// Enum for quality report severity
enum QualitySeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Enum for quality report status
enum QualityReportStatus {
  OPEN
  INVESTIGATED
  RESOLVED
  CLOSED
}


model AdminActivityLog {
  id        String   @id @default(uuid())
  type        String   // e.g., 'TRACTOR_LISTING_CREATED', 'USER_REGISTERED', etc.
  description String
  details     String?  // JSON string to store additional context
  timestamp   DateTime @default(now())

  @@index([type])
  @@index([timestamp])
}


enum DealerType{
  TractorParts
  EquipmentSupplier
  Comprehensive
}

model Dealer {
  id        String   @id @default(uuid())
  name          String
  location      String
  contactEmail  String
  contactPhone  String
  dealerType    DealerType
  specialties   String[]
  rating        Float     @default(0.0)
  verified      Boolean   @default(false)
  userId        String       @unique
  user          User      @relation(fields: [userId], references: [id])
  products      Product[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id        String   @id @default(uuid())
  name        String
  category    String
  price       Decimal
  inStock     Boolean   @default(true)
  dealerId    String
  dealer      Dealer    @relation(fields: [dealerId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Detail{
  id        String   @id @default(uuid())
  title     String
  description String? @db.Text
  videoUrl    String? @db.Text
  position    Int
  isVerified  Boolean @default(false)
  isNegotiable Boolean @default(false)

  isPublished Boolean @default(false)
  isStandard Boolean @default(false)


  muxData MuxData?


  tractorId  String
  tractor Tractor @relation(fields: [tractorId],references: [id], onDelete: Cascade)

  viewingProgress  ViewingProgress[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([tractorId])
}

model MuxData{
  id        String   @id @default(uuid())
  detailId  String @unique
  assetId   String
  playbackId String?

   detail Detail @relation(fields: [detailId],references: [id], onDelete: Cascade)
}

model ViewingProgress{
  id        String   @id @default(uuid())
  userId    String


  detailId  String
  detail Detail @relation(fields: [detailId],references: [id], onDelete: Cascade)

  isCompleted  Boolean @default(false)

   createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([detailId])
  @@unique([userId,detailId])

}


model Purchase{
   id        String   @id @default(uuid())
   userId    String

   tractorId  String

   tractor Tractor @relation(fields: [tractorId],references: [id], onDelete: Cascade)

   createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([tractorId])
}

model StripeCustomer{
  id        String   @id @default(uuid())
  userId    String @unique
  stripeCustomerId String @unique


   createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}